{
   "compilerOptions": {
     "target": "ESNext",
     "module": "commonjs",
     "moduleResolution": "node",
     "strict": false,
     "lib": ["ES6"],
     "esModuleInterop": true,
     "skipLibCheck": true,
     "forceConsistentCasingInFileNames": true,
     "sourceMap": true,
     "outDir": "dist"  ,
     "resolveJsonModule": true
   },
   "include": ["./tests/**/*.ts"],
   "exclude": ["node_modules"]
 }
